/* pages/account/account.wxss */
.account{
  width: 100%;
  height: 100%;
}
.userimg{
  width: 50px;
  height: 50px;
}
.account ul{
  width: 100%;
  height: 100%;
}
.account ul li{
  width: 100%;
  min-height: 50px;
  border-bottom: 1px solid #ccc;
  display:flex;
  justify-content: space-between;
  align-items:center;
  padding: 10px 20px;
  box-sizing: border-box;
}
.account .leftmsg{
  width:30%;
}
#previewImage{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.4);
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  align-items: center;
}