/* pages/othen/index.wxss */
@import "../template/template.wxss";
page{
  width: 100%;
  height: 100%;
}
.content{
  width: 100%;
  height: 100%;
  position: relative;
}
.bj{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  min-height:100%;
}
.text{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: calc(100% - 50px);
}
#content{
  width:100%;
  height: 100%;
  padding: 10px;
  overflow: auto;
  box-sizing: border-box;
}
.font{
  color: #fff;
  text-align: center;
  width: 100%;
  height: 100px;
  font-size: 18px;
  line-height: 100px;
  display: block;
}
.banner{
  width: 100%;
  height: 150px;
  margin: 0 auto;
}
.swiper{
  width: 100%;
  height: 100%;
}
.bannerImg{
  width: 100%;
}
.root{
  width: 30%;
  height: 50px;
  position: fixed;
  bottom: 10px;
  left: 10px;
}
/* 热销 */
.sellwell_btn{
  margin-bottom: 10px;
}
/* 我的 */
.myself_top{
  width: 100%;
  height: 100px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.myself_top .left{
  width: 100px;
  height: 100px;
  display: flex;
  justify-content: center;
  align-items: center
}
.image{
  width: 60px;
  height: 60px;
  border-radius: 50%;
}
.myself_top .rights{
  width: calc(100% - 100px);
  height: 100%;
  line-height: 100px;
}
.myself_content{
  width: 100%;
  height: 400px;
}
.mycont_top{
  width: 100%;
  height: 30%;
}
.mycont_top ul{
  width: 100%;
  height: 100%;
  background: rgba(255,255,255,.8);
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  align-items: center;
  padding:10px 0;
  box-sizing:border-box;

}
.mycont_top ul li{
  width: 33.33%;
  text-align: center;
  height: 30px;
  line-height: 30px;
}
.mycont_btom{
  width: 100%;
  height: calc(100% - 30%)
}
.btn{
  padding: 0;
  margin: 0;
  background-color: rgba(255,255,255,0);
  border:none;
  line-height: 30px;
}
.btn::after {
  border: none
}