<!-- 导航组件 -->
<template name="nav">
  <view class='nav'>
    <block wx:for="{{navarrs.navarr}}" wx:key="{{i}}">
      <view bindtap='jumpPage' data-router="{{item.router}}" data-index="{{index}}" class="a {{index == navIndex ? 'active' : ''}}">{{item.title}}</view>
    </block>
  </view>
</template>

<!-- 首页组件 -->
<template name="index">
   <view class='banner'>
      <swiper class='swiper' indicator-dots="false" indicator-color="#fff" autoplay="true" interval="2000" duration="400" circular="false" vertical="false" previous-margin="0px" next-margin="0px">
        <block wx:for="{{bannerUrl}}" wx:key="*this">
          <swiper-item>
            <view>
              <image class='bannerImg' src='{{item}}'/>
            </view>
          </swiper-item>
        </block>
      </swiper>
    </view>
</template>

<!-- 产品组件 -->
<template name="product">
  <view>
    product
  </view>
</template>

<!-- 热销组件 -->
<template name="sellwell">
  <view>
    sellwell
  </view>
</template>

<!-- 购物车组件 -->
<template name="car">
  <view class="page-body">
    <view class="page-section page-section-gap">
      <map
        id="myMap"
        style="width: 100%; height: 300px;"
        latitude="{{map.latitude}}"
        longitude="{{map.longitude}}"
        markers="{{map.markers}}"
        covers="{{map.covers}}"
        show-location
      ></map>
    </view>
    <view class="btn-area">
      <button bindtap="getCenterLocation" class="page-body-button" type="primary">获取位置</button>
      <button bindtap="moveToLocation" class="page-body-button" type="primary">移动位置</button>
      <button bindtap="translateMarker" class="page-body-button" type="primary">移动标注</button>
      <button bindtap="includePoints" class="page-body-button" type="primary">缩放视野展示所有经纬度</button>
    </view>
  </view>
</template>

<!-- 我的组件 -->
<template name="myself">
  <view class='audio'>
     <audio id="myAudio" class='audio_play' src='{{audio.src}}' loop="true" name="{{audio.name}}" poster="{{audio.poster}}" controls></audio>
  </view>
</template>
