/* 导航样式 */
.nav{
  width: 100%;
  height:50px;
  background: #fff;
  position: absolute;
  top: 0;
  left: 0;
}
.nav>.a{
  width: 20%;
  height: 100%;
  float: left;
  line-height:50px;
  text-align:center;
}
.nav>.active{
  border-bottom: 4px solid rgb(192, 28, 28);
  box-sizing: border-box;
}
.a-hover{
  color: blue;
}
/* car */
.page-section-gap{
  box-sizing: border-box;
  padding: 0 30rpx;
}

.page-body-button {
  margin-bottom: 30rpx;
}
/* project */
#product{
  width: 100%;
  height: auto;
  margin-top: 10px;
}
.item{
  width: 100%;
  height:100px;
  display: flex;
  justify-content: space-between;
  margin-top: 10px;
}
.left{
  width:120px;
  height: 100px;
}
.headImg{
  width: 100%;
  height: 100%;
}
.right{
  width: calc(100% - 100px);
  height: 100%;
  background:#fff;
  padding: 10px;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  flex-direction: column;
  position: relative;
}
.right view{
  margin: 3px;
}
.right .cancel{
  position: absolute;
  right: 0;
  top: 0;
}
.right .btn{
  position: absolute;
  right: 0;
  bottom: 0;
  height: 25px;
  line-height: 25px;
  font-size: 16px;
}
/* 我的样式 */
.audio{
  width: 100%;
  margin-bottom: 20px;
}
.audio_play{
  text-align: center;
  margin: 0 auto;
  display: block;
}