/* utils/component/wxPop/pop_modal.wxss */
.model{
  width: 60%;
  height:150px;
  background: #fff;
  position: fixed;
  top: 0;
  bottom: 0;
  left:0;
  right: 0;
  margin: auto;
  z-index: 999
}
.model_center{
  width: 100%;
  height: calc(100% - 80px);
  text-align: center;
  line-height: calc(100% - 70px);
  position: relative;
  display:flex;
  justify-content:center;
  align-items:center;
  color: #333;
  font-size: 18px;
}
.model_top{
  border-bottom: 1px solid #ccc;
  padding: 0 10px;
  box-sizing: border-box;
  background: rgb(235, 235, 235);
  display: flex;
  justify-content: space-between;
  align-items: center
}
.model_top,.model_bottom{
  height: 40px;
  width: 100%;
  line-height: 35px;
}
.model_bottom{
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.model_close,.model_yes{
  width: 30%;
  height: 30px;
  line-height: 30px;
  margin: 0 5px;
}
.input_base{
  width: 70%;
  height: 30px;
  position: absolute;
  top: 0;
  left: 0;
  right:0;
  bottom:0;
  margin: auto;
  z-index: 999;
  order:1px solid #ccc;
  background:#fff;
  color: #333;
}
.close{
  width:30px;
  height: 30px;
  text-align: center;
  line-height: 30px;
  font-size: 20px;
}

